<div class="col-md-10 col-md-offset-1">

  <h1 article-heading>Reference Articles</h1>
  <ul>
    <% @references.each do |ref| %>
    <li><%= ref.id%> <%= link_to ref.name, url_with_protocol(ref.reference_link), target: :blank %> </li>
    <% end %>
  </ul>


  <h2 class="text-center page-header">New Reference</h2>
  <%= form_for(@reference) do |f| %>
    <div class="form-group">
      <%= f.label :name, :class => "control-label" %>
      <%= f.text_field :name, :class => "form-control", :id => "ref-name"  %>
    </div>

    <div class="form-group">
      <%= f.label :reference_link, :class => "control-label" %>
      <%= f.text_field :reference_link, :class => "form-control", :id => "ref=link"  %>
    </div>

    <%= f.submit "Submit", :class => "btn btn-default" %>
  <% end %>

  <div id="referenceResult">
    <h2 id="referenceName"></h2>
    <p id="referenceLink"></p>
  </div>



</div>
