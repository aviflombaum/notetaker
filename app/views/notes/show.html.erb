
  <div class="col-md-10 col-md-offset-1">
    <div class="row">
      <h1 class="page-header"><%= @note.name %></h1>
      <h5>Notebook: <%= @note.notebook.title %>  </h5>
      <div class="inline">
        <%= link_to 'Back', notebooks_path, :class => "btn btn-small btn-default" %>
        <%= link_to 'Edit', edit_note_path(@note), :class => "btn btn-small btn-default" %>
        <%= link_to "Delete", @note, method: :delete, data: {confirm: "Are you sure you want to delete this note?"}, :class => "btn btn-small btn-default" %>


        <% if @note.reference != nil %>
          <h5>
            <%= @note.reference.reference_link %>
          </h5>
          <% end %>

        <p>
          <%= @note.content %>
        </p>
      </div>
    </div>

  </div>
