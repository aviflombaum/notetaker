<%= form_for(@notebook) do |f| %>

  <div class="form-group">
    <%= f.label :title, :class => "control-label" %>
    <%= f.text_field :title, :class => "form-control" %>
  </div>

  <div class="form-group">
    <h4>Add Your first Note</h4>
    <%= f.fields_for :notes do |note_builder| %>
      <%= note_builder.label :name, :class => "control-label" %>
      <%= note_builder.text_field :name, :class => "form-control" %>


      <%= note_builder.label :content, :class => "control-label" %>
      <%= note_builder.text_area :content, :class => "form-control" %>
    <% end %>
  </div>

  <%= f.submit "Submit", :class => "btn btn-default" %>
<% end %>
