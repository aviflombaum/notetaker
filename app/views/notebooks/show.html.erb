
<div class="container-fluid">
    <div class="col-md-10 col-md-offset-1">
      <div class="row">
        <h1 class="page-header"><%= @notebook.title %></h1>
        <div class="inline">
          <%= link_to 'Back', notebook_path(@notebook), :class => "btn btn-small btn-default" %>
          <%= link_to 'New Note', new_notebook_note_path(@notebook, @note), :class => "btn btn-small btn-default" %>
          <%= link_to "Delete", @notebook, method: :delete, data: {confirm: "Are you sure you want to delete this notebook?"}, :class => "btn btn-small btn-default" %>
        </div>
      </div>

      <div class="row">
        <% @notebook.notes.each do |note|  %>
          <h4><%= link_to note.name, notebook_note_path(@notebook, note)%></h4> 
          <p><%=note.content %></p>
        <% end %>
      </div>

  </div>
</div>
