
<div class="container-fluid">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h1 class="page-header"><%= @notebook.title %></h1>
      <div class="inline">
        <%= link_to 'Back', notebooks_path, :class => "btn btn-small btn-default" %>
        <%= link_to 'Edit', edit_notebook_path(@notebook), :class => "btn btn-small btn-default" %>

        <%= link_to "Delete", @notebook, method: :delete, data: {confirm: "Are you sure you want to delete this notebook?"}, :class => "btn btn-small btn-default" %>

      </div>

    </div>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <p>
          <% @notebook.notes.each do |note|  %>
            <%= note.content %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
