
<div class="col-md-10 col-md-offset-1">

  <div class="row">

    <h3>Notebooks for <%= current_user.email %></h3>
    <% @notebooks.each do |book| %>
      <h2><%= link_to book.title, notebook_path(book) %></h2>
      <p>
        <%= book.note_count %> Notes
      </p>
    <% end %>
  </div>


<div class="row">


    <h3>Looking for some Reading material? </h3>
    <ul>
      <% @references.each do |ref| %>
        <li> <%= link_to ref.name, url_with_protocol(ref.reference_link), target: :blank %> </li>
      <% end %>
    </ul>
  </div>


</div>
</div>
